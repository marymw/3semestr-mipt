#include <sys/types.h>
#include <fcntl.h>
#include <stdio.h>
#include <stdlib.h>

int main(){

	int fd;
	char string[25] = "";

	(void)umask(0);

	if((fd = open("myfile2", O_RDONLY)) < 0){
		printf("Can\'t open file\n");
		exit(-1);
	}

	if (read(fd, string, 25) != 25){
		printf("error in reading file\n");
		exit(-1);
	}

	printf("%s\n", string);

	if(close(fd) < 0){
		printf("Can\'t close file\n");
	}
	
	return 0;
}
